# Environment Configuration Template

# Database Connection
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/steelworks

# Database Connection Pool Settings
DB_POOL_SIZE=5              # Number of connections to keep ready
DB_MAX_OVERFLOW=10          # Additional connections for surge demands
DB_POOL_TIMEOUT=30          # Timeout in seconds for getting a connection

# Debugging
DB_ECHO_SQL=False           # Set to True to log all SQL statements

# Application Settings
APP_DEBUG=True
LOG_LEVEL=INFO
